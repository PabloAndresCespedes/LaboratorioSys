create table DEVELOPER.PERMISOS
(
  id                 NUMBER generated by default on null as identity,
  descripcion        VARCHAR2(100 CHAR) not null,
  explicacion        VARCHAR2(255 CHAR),
  codigo             NUMBER not null,
  app_apex_id        NUMBER,
  ind_menu           VARCHAR2(1 CHAR) default 'S' not null,
  page_apex_redirige NUMBER
)
;
comment on column DEVELOPER.PERMISOS.ind_menu
  is 'S or N';
comment on column DEVELOPER.PERMISOS.page_apex_redirige
  is 'Nro de pagina para redirigir';
alter table DEVELOPER.PERMISOS
  add constraint PERMISOS_ID_PK primary key (ID);
alter table DEVELOPER.PERMISOS
  add constraint PERMISOS_IND_MENU_CK
  check (ind_menu in ('S', 'N'));

