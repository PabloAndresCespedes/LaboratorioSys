create table DEVELOPER.PERMISOS_PAGINAS
(
  id                 NUMBER generated by default on null as identity,
  permiso_id         NUMBER not null,
  app_id             NUMBER not null,
  page_id            NUMBER not null,
  ind_menu_principal VARCHAR2(1 CHAR) default 'N',
  fecha_grab         DATE default SYSDATE
)
;
comment on column DEVELOPER.PERMISOS_PAGINAS.ind_menu_principal
  is 'Solo puede haber uno en S para saber donde ira redirigido';
create index DEVELOPER.PERMISOS_PAGINAS_I1 on DEVELOPER.PERMISOS_PAGINAS (PERMISO_ID);
alter table DEVELOPER.PERMISOS_PAGINAS
  add constraint PERMISOS_PAGINAS_ID_PK primary key (ID);
alter table DEVELOPER.PERMISOS_PAGINAS
  add constraint PERMISOS_PAGINA_UK unique (PERMISO_ID, APP_ID, PAGE_ID);
alter table DEVELOPER.PERMISOS_PAGINAS
  add constraint PERMISOS_PAGINA_PERMISO_ID_FK foreign key (PERMISO_ID)
  references DEVELOPER.PERMISOS (ID) on delete cascade;

