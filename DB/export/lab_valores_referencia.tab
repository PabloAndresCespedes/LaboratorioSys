create table DEVELOPER.LAB_VALORES_REFERENCIA
(
  id             NUMBER generated by default on null as identity,
  empresa_id     NUMBER not null,
  descripcion    VARCHAR2(255 CHAR) not null,
  genero_id      NUMBER,
  tipo           VARCHAR2(8 CHAR),
  valor          VARCHAR2(4000 CHAR),
  creado         DATE not null,
  creado_por     VARCHAR2(255 CHAR) not null,
  modificado     DATE not null,
  modificado_por VARCHAR2(255 CHAR) not null
)
;
create index DEVELOPER.LAB_VALORES_REFERE_I1 on DEVELOPER.LAB_VALORES_REFERENCIA (GENERO_ID);
alter table DEVELOPER.LAB_VALORES_REFERENCIA
  add constraint LAB_VALORES_REFERE_ID_PK primary key (ID);
alter table DEVELOPER.LAB_VALORES_REFERENCIA
  add constraint LAB_VALORES_REFERE_GENERO_I_FK foreign key (GENERO_ID)
  references DEVELOPER.LAB_GENEROS (ID) on delete cascade;
alter table DEVELOPER.LAB_VALORES_REFERENCIA
  add constraint LAB_VALORES_REFERE_TIPO_CK
  check (tipo in ('TEXTO','NUMERICO'));

